<!-- app/views/podcasts/_form.html.erb -->
<%= form_with(model: @podcast, local: true) do |form| %>
  <!-- Other form fields -->

    <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :published_at %>
    <%= form.date_field :published_at %>
  </div>

  <div class="field">
    <%= form.label :transcript %>
    <%= form.text_area :transcript %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit %>
<% end %>
