<div>
  <%= simple_form_for(@podcast, html: { class: 'custom-form' }) do |form| %>
    <div class="form-group">
      <%= form.input :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.input :description, class: 'form-control', input_html: { rows: 4 } %>
    </div>

    <div class="form-group">
      <%= form.label :transcript, class: 'form-label' %>
      <%= form.text_area :transcript, class: 'form-control', input_html: { rows: 6 } %>
    </div>

    <div class="form-group">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control-file' %>
    </div>

    <div>
      <%= form.input :external_link, label: 'External Link', class: 'form-control' %>
    </div>

    <%= form.error_notification %>

    <div class="text-center">
      <%= form.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
